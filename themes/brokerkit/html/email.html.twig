<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="Arial, sans-serif" />
      <mj-text font-size="15px" color="#23496d" line-height="175%" />
    </mj-attributes>
    <mj-style inline="inline">
      a {color:#16b783; text-decoration:underline;}
      p {margin:0;}
    </mj-style>
  </mj-head>
  <mj-body>
    <mj-section background-color="#16b783" padding="0">
      <mj-column>
        <mj-spacer height="4px" />
      </mj-column>
    </mj-section>
    <mj-section background-color="#ffffff" padding="20px 20px 10px">
      <mj-column>
        <mj-image src="https://brokerkit-mautic-assets.s3.us-east-1.amazonaws.com/logos/email-header-logo-black-200x38.png" alt="BrokerKit" width="200px" align="center" />
      </mj-column>
    </mj-section>
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <mj-text>
          <p>Your email content goes here.</p>
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section background-color="#ffffff" padding="0 20px">
      <mj-column>
        <mj-divider border-color="#16b783" border-width="2px" padding="10px 0" />
      </mj-column>
    </mj-section>
    <mj-section padding="20px 0 0">
      <mj-column>
        <mj-text font-size="12px" color="#23496d" align="center">
          <p>Brokerkit, PO BOX 6752, Denver, CO 80206, (720) 741-2157</p>
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section padding="10px 0 20px">
      <mj-column>
        <mj-text font-size="11px" color="#6d6d6d" align="center">
          <p>{unsubscribe_text} | {webview_text}</p>
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
